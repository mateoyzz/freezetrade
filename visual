-- LocalScript in StarterGui

local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "GrowAGardenGUI"
gui.ResetOnSpawn = false

-- Create the main draggable frame
local function createFrame(parent, size, pos)
	local frame = Instance.new("Frame")
	frame.Size = size
	frame.Position = pos
	frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20) -- Black background
	frame.BorderSizePixel = 0
	frame.BackgroundTransparency = 0
	frame.Active = true
	frame.Draggable = true
	frame.Parent = parent

	local uicorner = Instance.new("UICorner")
	uicorner.CornerRadius = UDim.new(0, 8)
	uicorner.Parent = frame

	return frame
end

-- Toggle Button (Auto Freeze / Auto Accept)
local function createToggle(parent, labelText)
	local container = Instance.new("Frame")
	container.Size = UDim2.new(0, 300, 0, 50)
	container.BackgroundTransparency = 1
	container.Parent = parent

	local label = Instance.new("TextLabel")
	label.Text = labelText
	label.Font = Enum.Font.Gotham
	label.TextSize = 20
	label.TextColor3 = Color3.new(1, 1, 1)
	label.BackgroundTransparency = 1
	label.Size = UDim2.new(0.7, 0, 1, 0)
	label.TextXAlignment = Enum.TextXAlignment.Left
	label.Parent = container

	local button = Instance.new("TextButton")
	button.Text = "OFF"
	button.Font = Enum.Font.Gotham
	button.TextSize = 18
	button.Size = UDim2.new(0.3, -10, 1, 0)
	button.Position = UDim2.new(0.7, 10, 0, 0)
	button.BackgroundColor3 = Color3.fromRGB(130, 0, 160) -- Purple OFF
	button.TextColor3 = Color3.new(1, 1, 1)
	button.Parent = container

	local uicorner = Instance.new("UICorner")
	uicorner.CornerRadius = UDim.new(0, 6)
	uicorner.Parent = button

	local toggled = false
	button.MouseButton1Click:Connect(function()
		toggled = not toggled
		if toggled then
			button.Text = "ON"
			button.BackgroundColor3 = Color3.fromRGB(180, 70, 255) -- Lighter Purple ON
		else
			button.Text = "OFF"
			button.BackgroundColor3 = Color3.fromRGB(130, 0, 160) -- Darker Purple OFF
		end
	end)

	return container
end

-- Main GUI Frame (Top-Right Position)
local mainFrame = createFrame(gui, UDim2.new(0, 320, 0, 220), UDim2.new(1, -330, 0, 10))

-- Layout and Padding
local layout = Instance.new("UIListLayout")
layout.FillDirection = Enum.FillDirection.Vertical
layout.VerticalAlignment = Enum.VerticalAlignment.Top
layout.Padding = UDim.new(0, 10)
layout.Parent = mainFrame

local padding = Instance.new("UIPadding")
padding.PaddingTop = UDim.new(0, 10)
padding.PaddingLeft = UDim.new(0, 10)
padding.PaddingRight = UDim.new(0, 10)
padding.PaddingBottom = UDim.new(0, 10)
padding.Parent = mainFrame

-- Title Label at the Top
local title = Instance.new("TextLabel")
title.Text = "Script Made by - HANZSCRIPTS"
title.Font = Enum.Font.GothamBold
title.TextSize = 20
title.TextColor3 = Color3.new(1, 1, 1)
title.BackgroundTransparency = 1
title.Size = UDim2.new(1, 0, 0, 30)
title.TextXAlignment = Enum.TextXAlignment.Center
title.Parent = mainFrame

-- Add Toggles
createToggle(mainFrame, "Auto Freeze")
createToggle(mainFrame, "Auto Accept")
